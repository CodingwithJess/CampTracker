<div class="card text-center">
    <div class="card-header">
        <div class="header-text">
            <h3>What is life, but one grand adventure!</h3>
            <h5>Add all the amazing places you've been below:</h5>
        </div>
    </div>
    <div class="card-body" data-id="{{this.id}}">
        <div class="form-group">
            <label for="name">Campground name: </label>
            <input type="text" class="campName" value="{{name}}">
        </div>
        <div class="form-group">
            <label for="location">Campground location: </label>
            <input type="text" class="campLocation" value="{{location}}">
        </div>
        <div class="form-group">
            <label for="description">Give a brief description of your experience! What did you like? </label>
            <br>
            <textarea type="text" class="campDescription">{{description}}</textarea>
        </div>
        <div class="form-group">
            <label for="rating">Pick a rating for this campsite!</label>
            <sublabel>(5 being perfect, 0 being never again.)</sublabel>
            <select class="form-control campRating" id="rating">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <button type="submit" class="btn save-site btn-default save-btn">Save</button>
        {{!-- <button type="submit" class="btn save-site btn-default">Save your campsite!</button> --}}
    </div>
</div>